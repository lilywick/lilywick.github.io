<h1>Listing posts</h1>
<% if current_user %>
  <%= link_to 'New Post', new_post_path %>
<% end %>

<div class="post-container">

  <% @posts.each do |post| %>
    <div class="post">
      <div class="image">
        <%= link_to post_path(post.id) do %>
        <%= image_tag(post.image_url.to_s)%>
      <% end %>
      </div>
    </div>
  <% end %>

</div>