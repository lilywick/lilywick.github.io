<p id="notice"><%= notice %></p>
<div >
<div class="title">
  <%= @post.title %>
</div>
<div class="image">
  <%= image_tag @post.image_url.to_s %>
</div>

<div class="body">
  <%= @post.body %>
</div>
  <% if current_user %>

    <div class="controls">
      <%= link_to 'Edit', edit_post_path(@post.id) %>
      <%= link_to 'Delete', post_path, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
    </div>
  <% end %>

  </div>

<%= link_to 'Back', posts_path %>
